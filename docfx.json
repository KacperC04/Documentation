{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",

  "metadata": [
    {
      "src": [
        {
          "src": "../BOOSEapplication",
          "files": [ "**/*.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],

  "build": {
    "content": [
      { "files": [ "**/*.{md,yml}" ] }
    ],
    "resource": [
      { "files": [ "images/**" ] }
    ],
    "output": "_site",
    "template": [ "default", "modern" ],

    "globalMetadata": {
      "_appName": "BooseInterpreter",
      "_appTitle": "BooseInterpreter",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableContribution": true,
      "_appFooter": "",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_appDefaultStartupPage": "api/BOOSEapplication.html"
    }
  }
}
